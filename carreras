<!-- load D3js -->
<script src="//d3plus.org/js/d3.js"></script>

<!-- load D3plus after D3js -->
<script src="//d3plus.org/js/d3plus.js"></script>

<!-- create container element for visualization -->
<div id="viz"></div>

<script>
  // sample data array
  var data = [
{"carrera":"Ingeniero Electrico","cantidad":62},
{"carrera":"Ingeniero Electronico","cantidad":1046},
{"carrera":"Ingeniero en Armas","cantidad":30},
{"carrera":"Ingeniero en Informatica","cantidad":370},
{"carrera":"Ingeniero en Petroleo","cantidad":259},
{"carrera":"Ingeniero Industrial","cantidad":3220},
{"carrera":"Ingeniero Mecanico","cantidad":495},
{"carrera":"Ingeniero Metalurgico","cantidad":7},
{"carrera":"Ingeniero Naval","cantidad":93},
{"carrera":"Ingeniero Quimico","cantidad":1},
{"carrera":"Ingeniero Quimico","cantidad":507},
{"carrera":"Lic.en Administracion y Sistemas","cantidad":338},
{"carrera":"Licenciado en Analisis de Sistemas","cantidad":110},
{"carrera":"Licenciado en Ciencias Meteorologicas","cantidad":1},
{"carrera":"Licenciado en Hidrografia","cantidad":16},
{"carrera":"Licenciado en Informatica","cantidad":88},
{"carrera":"Licenciado en Oceanografia","cantidad":115}
  ]

  
  // instantiate d3plus
  var visualization = d3plus.viz()
    .container("#viz")  // container DIV to hold the visualization
    .data(data)  // data to use with the visualization
    .type("tree_map")   // visualization type
    .id("carrera")         // key for which our data is unique on
    .size("cantidad")      // sizing of blocks
    .draw()             // finally, draw the visualization!
</script>
